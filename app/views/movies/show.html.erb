<h1><%= @movie.title %></h1>

<h3>Trailer</h3>

<iframe width="560" height="315" src="//www.youtube.com/embed/<%= @movie.trailer %>" frameborder="0" allowfullscreen></iframe>

<p><%= @movie.description %></p>

<% if @movie.actors %>
<h3>Cast</h3>
	<% @movie.actors.each do |actor| %>
<ul>
	<li><%= actor.name %></li>
</ul>
	<% end %>
<% end %>
		
<p>And google's favorite gif:</p>

<img src="<%= @movie.gif %>">
